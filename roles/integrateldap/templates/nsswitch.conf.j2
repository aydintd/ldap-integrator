# /etc/nsswitch.conf
#
# Example configuration of GNU Name Service Switch functionality.
# If you have the `glibc_doc_reference' and `info' packages installed, try:
# `info libc "Name Service Switch"' for information about this file.

passwd:         {{ ns_passwd_entry }}
group:          {{ ns_group_entry }}
shadow:         {{ ns_shadow_entry }} 

hosts:          files mdns4_minimal [NOTFOUND=return] dns
networks:       files

protocols:      db files
services:       db files
ethers:         db files
rpc:            db files

netgroup:       {{ ns_netgroup_entry }}
